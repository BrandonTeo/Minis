<%- include('partials/header.ejs') %>
    
    <div class="container">
        <div class="inner container">
            <div class="card border-info">
                <img src="<%= blog.image %>" class="card-img-top">
                <div class="card-body">
                    <div class="blog-title"><%= blog.title %></div>
                    <div class="blog-date"><%= blog.date.toDateString() %></div>
                    <div class="blog-content"><%= blog.content %></div>
                    <div class="button-group">
                        <a class="btn btn-outline-warning" href="/blogs/<%= blog._id %>/edit">Edit</a>
                        <form class="delete-inline" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"><button type="submit" class="btn btn-primary btn-outline-danger">Delete</button></form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer.ejs') %>
