<%- include('partials/header.ejs') %>

    <div class="container">
        <div class="inner container">
            <div class="card border-info">
                <div class="card-body">
                    <h1>Edit Post</h1>
                    <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" name="updatedBlog[title]" value="<%= blog.title %>" required>
                        </div>
                        <div class="form-group">
                            <label>Image source</label>
                            <input type="text" class="form-control" name="updatedBlog[image]" value="<%= blog.image %>" required>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <textarea type="text" class="form-control"  rows="6" name="updatedBlog[content]" required><%= blog.content %></textarea>
                        </div>
                        <button type="submit" class="submit-btn btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer.ejs') %>
